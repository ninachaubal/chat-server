{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "paths": {
      "~*": [
        "./*"
      ]
    },
    "target": "ES2015"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}